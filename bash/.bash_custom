#! /usr/bin/env bash

extend-path() {
    export PATH="$1:$PATH"
}

BINARY_PATHS=()
for BINARY_PATH in "${BINARY_PATHS[@]}"
do
    extend-path "$BINARY_PATH"
done

alias cdo='cd $OLDPWD'
alias sysupdate='sudo apt update -y && sudo apt upgrade -y && sudo apt dist-upgrade -y && sudo apt autoremove -y'

# Less
export LESS='IFRSXN'
